<div class="container">
<h1>Business Contact List</h1>

<div class="row">
    <div class="col">
        
            <a href="/add" class="btn btn-primary" role="button"><i class="fa fa-plus-circle" aria-hidden="true"></i>
                Add a Contact </a>

        <table class="table table-striped table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th scope="col" class="text-center">#</th>
                    
                    <th scope="col">Contact Name</th>
                    <th scope="col">Contact Number</th>
                    <th scope="col">Email Address</th>
                    <th class="text-center col-2" >Edit</th>
                    <th class="text-center col-2">Delete</th>
                </tr>
                </thead>
                <tbody id="businessList">
                   
                    <% for( let count =0; count <businesses.length; count ++)
                    { %>
                        <tr>
                            <th scope="row" class="text-center"><%=count +1 %></th>
                                <td><%= businesses[count].Name %></td>
                                <td><%= businesses[count].Number %></td>
                                <td><%= businesses[count].Email %></td>
                                <td class="text-center col-1"><a href="/edit/<%= businesses[count]._id %> class=btn btn-primary">
                                    <i class="fas fa-pencil-alt btn-sm"></i>Edit</a></td>

                                    <td class="text-center col-1"><a href="/business-list/delete/<%= businesses[count]._id %> class=btn btn-danger">
                                    <i class="fas fa-trash-alt btn-sm"></i>Edit</a></td>
                            </tr>
                    
                    <%} %>
                </tbody>

        </table>
    </div>
</div>
</div>