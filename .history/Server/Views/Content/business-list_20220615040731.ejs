<div class="container">
<h1>Business Contact List</h1>

<div class="row">
    <div class="col">
        
            <a href="/business-list/add" class="btn btn-primary" role="button"><i class="fa fa-plus-circle" aria-hidden="true"></i>
                Add a Contact </a>

        <table class="table table-striped table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th scope="col" class="text-center">#</th>
                    
                    <th scope="col">Contact Name</th>
                    <th scope="col">Contact Number</th>
                    <th scope="col">Email Address</th>
                    <th class="text-center col-1" ></th>
                    <th class="text-center col-1"></th>
                </tr>
                </thead>
                <tbody id="businessList">
                    <!--Repeat rows-->
                    <% for( let count =0; count <businesses.length; count ++)
                    { %>
                        <tr>
                            <th scope="row" class="text-center"><%=count +1 %></th>
                                <td><%= businesses[count].Name %></td>
                                <td><%= businesses[count].Number %></td>
                                <td><%= businesses[count].Email %></td>
                                <td class="text-center col-1"></td>
                                <td ></td>
                            </tr>
                    
                    <%} %>
                </tbody>

        </table>
    </div>
</div>
</div>